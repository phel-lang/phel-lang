{
    "name": "phel-lang/phel-lang",
    "type": "library",
    "description": "Phel is a functional programming language that compiles to PHP",
    "keywords": [
        "phel",
        "lisp",
        "functional",
        "language"
    ],
    "homepage": "https://phel-lang.org/",
    "license": "MIT",
    "authors": [
        {
            "name": "Jens Haase",
            "email": "je.haase@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "gacela-project/gacela": "^0.32",
        "phpunit/php-timer": "^5.0",
        "symfony/console": "^5.4"
    },
    "require-dev": {
        "ext-readline": "*",
        "friendsofphp/php-cs-fixer": "^3.13",
        "phpbench/phpbench": "^1.2",
        "phpmetrics/phpmetrics": "^2.8",
        "phpstan/phpstan": "^1.9",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-phpunit": "^0.17 || ^0.18",
        "symfony/var-dumper": "^5.4",
        "vimeo/psalm": "^4.30"
    },
    "autoload": {
        "psr-4": {
            "Phel\\": "src/php/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhelTest\\": "tests/php"
        }
    },
    "scripts": {
        "test-all": [
            "@static-clear-cache",
            "@test-quality",
            "@test-compiler",
            "@test-core"
        ],
        "test-quality": [
            "@csrun",
            "@psalm",
            "@phpstan"
        ],
        "static-clear-cache": [
            "vendor/bin/psalm --clear-cache",
            "vendor/bin/phpstan clear-result-cache"
        ],
        "test-compiler": "./vendor/bin/phpunit --testsuite=integration,unit --log-junit=data/log-junit.xml",
        "test-compiler:coverage": "XDEBUG_MODE=coverage ./vendor/bin/phpunit --testsuite=integration,unit --coverage-html=data/coverage-html --coverage-xml=data/coverage-xml --log-junit=data/coverage-xml/junit.xml",
        "test-core": "./phel test",
        "psalm": "./vendor/bin/psalm --no-cache",
        "phpstan": "./vendor/bin/phpstan --memory-limit=516M",
        "csfix": "./vendor/bin/php-cs-fixer fix",
        "csrun": "./vendor/bin/php-cs-fixer fix --dry-run",
        "phpbench": "./vendor/bin/phpbench run --report=aggregate --ansi",
        "phpbench-base": "./vendor/bin/phpbench run --tag=baseline --report=aggregate --progress=plain --ansi",
        "phpbench-ref": "./vendor/bin/phpbench run --ref=baseline --report=aggregate --progress=plain --ansi",
        "metrics-report": [
            "@test-compiler",
            "./vendor/bin/phpmetrics --config=phpmetrics-config.json --junit=data/log-junit.xml"
        ]
    },
    "bin": [
        "phel"
    ],
    "config": {
        "platform": {
            "php": "8.0"
        },
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    }
}
